{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "outDir": "./dist/lib/",
    "declarationDir": "dist/lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "tsBuildInfoFile": "../../.build-cache/cacti-ledger-browser.tsbuildinfo",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "lib": ["ES2015", "dom"]
  },
  "include": ["./src"]
}
